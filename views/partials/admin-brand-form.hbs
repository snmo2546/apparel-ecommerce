<div class="form-row mb-3">
  <label class="form-label" for="name">Name</label>
  <input class="form-control" type="text" name="name" id="name" value="{{brand.name}}" required>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="introduction">Introduction</label>
  <textarea class="form-control" type="text" name="introduction" id="introduction">{{brand.introduction}}</textarea>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="image">Image</label>
  <input class="form-control form-control-file" type="file" name="image" id="image">
</div>
<button type="submit" class="btn btn-primary">提交</button>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>