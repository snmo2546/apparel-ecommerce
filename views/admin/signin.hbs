<div class="container">
  <div class="d-flex justify-content-center my-5">
    <div style="width: 40%">
      <div class="mb-4 text-center">
        <h1 class="h3 font-weight-normal mb-3">Apparel 後台管理</h1>
      </div>
      <form class="form-signin" action="/admin/signin" method="POST" style="width: 100%;">
        <div class="form-row mb-3">
          <label class="form-label" for="email">Email</label>
          <input type="text" id="email" name="email" class="form-control" required autofocus>
        </div>
        <div class="form-row mb-3">
          <label class="form-label" for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" required>
        </div>
        <button class="btn btn-primary mt-3 btn-block w-100 rounded-pill" type="submit">登入</button>
      </form>
    </div>
  </div>
</div>
