<div class="container">
  {{> navbar}}
  <div class="d-flex justify-content-center">
    <div class="w-50">
      <h3>確認訂單 Confirmation</h3>
      <hr>
      <h4>商品明細</h4>
      {{> cart-item-table}}
      <div class="row d-flex">
        <form action="/orders/{{user.id}}" method="POST" class="d-flex">
          <div class="form-row mb-3 w-50 pe-3">
            <label for="shipmentMethod" class="form-label">
              <h4>送貨方式</h4>
            </label>
            <select class="form-select" name="shipmentMethod" id="shipmentMethod">
              {{#each shipmentMethods}}
                <option value="{{this.id}}-{{this.fee}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <input type="hidden" name="total" id="inputTotal">
          <div class="w-50 ps-3">
            <h4>訂單資訊</h4>
            <hr>
            <div class="d-flex justify-content-between">
              <span>小計：</span>
              <span id="productTotal">{{calculateCartTotal user.Carts}}</span>
            </div>
            <div class="d-flex justify-content-between">
              <span>運費：</span>
              <span id="shipmentFee"></span>
            </div>
            <br>
            <div class="d-flex justify-content-between">
              <strong>合計：</strong>
              <span id="displayTotal"></span>
            </div>
            <div class="d-flex justify-content-end mt-3">
              <button type="submit" class="btn btn-secondary">送出訂單</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/new-order.js"></script>